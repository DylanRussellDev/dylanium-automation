<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

        <target>System.err</target>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level> <!-- Change value to WARN to only print WARN level messages or above to console -->
        </filter>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">

            <pattern>%d{MM-dd-yyyy} | %d{HH:mm:ss.SSS} | %highlight(%-5level) | %cyan(%-25.-25logger{15}) | %-20.20thread | %msg %ex{10}%nopex%n</pattern>

        </encoder>

    </appender>

    <!--Generates a log file-->
    <appender name="LOG_FILE" class="ch.qos.logback.core.FileAppender">

        <file>${user.dir}/test-results/log-files/execution-log.log</file>

        <append>true</append>
        <immediateFlush>true</immediateFlush>

        <encoder>

            <pattern>%d{MM-dd-yyyy} | %d{HH:mm:ss.SSS} | %-5level | %-25.-25logger{15} | %-20.20thread | %msg %ex%nopex%n</pattern>

        </encoder>

    </appender>

    <!--Generates a html file of the logs-->
    <appender name="LOG_HTML" class="ch.qos.logback.core.FileAppender">

        <file>${user.dir}/test-results/log-files/execution-log.html</file>

        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">

            <layout class="ch.qos.logback.classic.html.HTMLLayout">

                <pattern>%d{MM-dd-yyyy}%d{HH:mm:ss.SSS}%level%logger{15}%thread%msg</pattern>

            </layout>

        </encoder>

    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOG_FILE"/>
        <appender-ref ref="LOG_HTML"/>
    </root>

</configuration>